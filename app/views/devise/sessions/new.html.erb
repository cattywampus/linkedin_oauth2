<h2>Sign in</h2>

<%= link_to 'With LinkedIn', user_omniauth_authorize_path(:linkedin), class: 'btn btn-lg btn-primary' %>

<h3>...or...</h3>

<p>Using your username and password for this site.</p>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <%= f.label :email, class: 'control-label col-md-2' %>
    <div class="col-md-4">
      <%= f.email_field :email, autofocus: true, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :password, class: 'control-label col-md-2' %>
    <div class="col-md-4">
      <%= f.password_field :password, autocomplete: "off", class: 'form-control col-md-4' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        <%= f.label :remember_me do %>
          <%= f.check_box :remember_me %> Remember me
        <% end %>
      </div>
    </div>
  <% end -%>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Sign in", class: 'btn btn-default' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
