<h2>Sign up</h2>

<%= link_to 'With LinkedIn', user_omniauth_authorize_path(:linkedin), class: 'btn btn-lg btn-primary' %>

<h3>...or...</h3>

<p>Create a new user and password</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.label :name, class: 'control-label col-md-2' %>
    <div class="col-md-4">
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: 'control-label col-md-2' %>
    <div class="col-md-4">
      <%= f.email_field :email, class: 'form-control' %>
    </div>
  </div>

  <% if f.object.password_required? %>
    <div class="form-group">
      <%= f.label :password, class: 'control-label col-md-2' %>
      <div class="col-md-4">
        <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
        <% if @validatable %>
          <span class="help-block">
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          </span>
        <% end %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: 'control-label col-md-2' %>
      <div class="col-md-4">
        <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= f.submit "Sign up", class: 'btn btn-primary' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
